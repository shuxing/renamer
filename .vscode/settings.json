// Place your settings in this file to overwrite default and user settings.
{
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/coverage": true,
        "public/lib": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.d.ts": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true
    },
    "typescript.tsdk": "./node_modules/typescript/lib"
}